{
  "name": "browser-extension-template-bun-vite-react",
  "displayName": "Browser Extension Template (Bun + Vite + React + TS)",
  "description": "A template for browser extension with Bun, Vite and React.",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "bun",
    "vite",
    "react",
    "browser",
    "extension",
    "template",
    "chrome-extension"
  ],
  "scripts": {
    "dev": "vite --force",
    "build": "tsc && bunx --bun vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "fmt": "prettier --write '**/*.{tsx,ts,json,css,scss,md}'"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.0-beta.21",
    "@types/chrome": "^0.0.254",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "prettier": "^3.1.1",
    "typescript": "^5.2.2",
    "vite": "4.5.1"
  }
}
